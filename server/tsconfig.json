{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext"
  },
  // "include": ["src", "index.ts", "src/types/**/*.d.ts", "src/config/swagger/*.ts"],
  // "include": ["./src/**/*.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "lib": ["ES2020"],
  "typeRoots": ["node_modules/@types"],
  "types": ["node", "express"]
}
